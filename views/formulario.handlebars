<main>

    <!-- FORMULARIO -->

    <div class="conteiner" style="background-color">
        <div class="row">
           <div class="col-6 offset-3">

                {{!vamos chamar o conteudo do partials de repeticao}}
                {{>mensagens}}
                <form action="/cadastrar" method="post" enctype="multipart/form-data">
                    <input type="text" name="nome" class="form-control" placeholder="Nome do produto">
                    <input type="number" name="valor" class="form-control" placeholder="Valor do produto">
                    <input type="file" name="imagem" class="form-control">
                    <input type="submit" placeholder="Cadastrar" value="Cadastrar">
                </form>
           </div>
        </div>
    </div>

    <div class="conteiner">
        <div class="row">
            {{#each produtos}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card cartao" >
                       <img class="img" src="../imagens/{{imagem}}">
                           <div class="textos text">
                              <p>{{nome}}</p>
                              <p>RS {{valor}}.00</p>
                           </div>
                        <a href="/formularioEditar/{{codigo}}" class="btn btn-warning">Alterar</a>
                        <a href="/remover/{{codigo}}&{{imagem}}" class="btn btn-danger">Remover</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>